        <menuitem id = "hotel_menu" name = "Hotel"/>

        <menuitem id = "management_menu" name = "Management"/>

        <menuitem id = "management_menu1" name = "Management!"/>

        <record id="view_hotel" model="ir.ui.view">
            <field name="name">view_hotel</field>
            <field name="model">hmshotel</field>
            <field name="arch" type="xml">
                <form string=" Hotel">
                    <sheet>
                        <group>
                            <field name = "name" String = "Name"/>
